<!DOCTYPE html>
<html>
  <head>
    <title>
      ecommerce
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    <%= render 'tracking' %>
  </head>
  <body class="bg-gray-100">
    <%= render 'client_top_navigation' %>
    <main class="bg-white">
      <div class="max-w-6xl mx-auto py-6 sm:px-6 lg:px-8">
        <% if notice %>
          <p class="bg-green-200 rounded text-green-600 py-2 px-4 mb-8 font-medium text-md" id="notice">
            <%= notice %>
          </p>
        <% end %>
        <% if alert %>
          <p class="bg-red-200 rounded text-red-600 py-2 px-4 mb-8 font-medium text-md" id="alert">
            <%= alert %>
          </p>
        <% end %>
        <%= yield %>
      </div>
    </main>
  </body>
  <%= render 'footer' %>
</html>
